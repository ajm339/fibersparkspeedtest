<%= form_for @speed_record, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :ip_address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ip_address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :download_speed, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :download_speed, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :upload_speed, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :upload_speed, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :latency, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :latency, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :jitter, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :jitter, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hostname, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :hostname, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  speed_records_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
